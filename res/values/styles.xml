<resources>

    <!-- ===============================================================
         Text styles
         =============================================================== -->

    <style name="Text" parent="android:style/TextAppearance">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:paddingBottom">6dip</item>
    </style>

    <style name="Text.Title">
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/theme_colour_100</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.SmallTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/theme_colour_100</item>
    </style>

    <style name="PagerStrip">
        <item name="android:background">@color/theme_colour_100</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>